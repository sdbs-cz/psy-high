.tickets-b.tickets-b--shop
  %h2.se-header #{ t("tickets.shop.header") }
  :markdown
    #{ t("tickets.shop.description") }

  %p.tickets-l--shop
    =link_to 'buy.psy-high.eu', 'http://buy.psy-high.eu/#nav_primary'

.tickets-b.tickets-b--order
  %h2.se-header #{ t("tickets.order.header") }
  :markdown
    #{ t("tickets.order.description") }
    

  = form_tag 'http://progrestinate.com/ticketpro/actionAdd.php', class: 'tickets-f', method: 'post' do
    = field_set_tag(class: 'tickets-f-row') do
      %p.f--ticket_email
        = label_tag :ticket_email, caption: 'E-mail'
        = email_field_tag :ticket_email, value: '@'
      %p.f--ticket_amount
        = label_tag :ticket_amount, caption: t("tickets.amount")
        = number_field_tag :ticket_amount, value: 1, min: 1, step: 1
    %p.f--submit
      = submit_tag t("tickets.submit")
